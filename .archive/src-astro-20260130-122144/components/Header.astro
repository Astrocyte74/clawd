---
// Header.astro - Enhanced navigation header with theme toggle
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-50 w-full border-b border-border/40 glass supports-[backdrop-filter]:backdrop-blur-xl">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Enhanced Logo -->
      <a
        href="/"
        class="group flex items-center gap-2 font-bold text-lg sm:text-xl transition-all duration-300 hover:scale-105"
      >
        <span class="relative flex h-8 w-8 items-center justify-center rounded-xl bg-gradient-to-br from-primary to-purple-600 text-white shadow-lg shadow-primary/30 transition-all duration-300 group-hover:shadow-xl group-hover:shadow-primary/40 group-hover:rotate-12">
          <svg
            class="h-5 w-5 transition-transform duration-300 group-hover:scale-110"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              d="M13 10V3L4 14h7v7l9-11h-7z"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </span>
        <span class="gradient-text transition-opacity duration-300 group-hover:opacity-90">Clawdbot Hub</span>
      </a>

      <!-- Right side -->
      <div class="flex items-center gap-3">
        <!-- Enhanced GitHub link -->
        <a
          href="https://github.com/Astrocyte74/clawd"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden sm:inline-flex h-10 items-center justify-center rounded-xl bg-muted/50 px-4 text-sm font-medium transition-all duration-300 hover:bg-muted hover:scale-105 hover:shadow-lg hover:shadow-primary/10 shimmer"
        >
          <svg
            class="mr-2 h-4 w-4 transition-transform duration-300 group-hover:scale-110"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            />
          </svg>
          <span>GitHub</span>
        </a>

        <!-- Enhanced Theme toggle -->
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>
