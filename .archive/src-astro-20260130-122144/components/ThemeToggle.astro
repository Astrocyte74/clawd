---
// ThemeToggle.astro - Enhanced animated theme switcher component
---

<button
  id="theme-toggle"
  class="theme-toggle relative inline-flex h-10 w-10 items-center justify-center rounded-xl bg-muted/50 hover:bg-muted transition-all duration-300 hover:scale-110 active:scale-95 group shimmer"
  aria-label="Toggle theme"
  type="button"
>
  <!-- Sun icon -->
  <svg
    class="sun-icon h-5 w-5 rotate-0 scale-100 transition-all duration-500 dark:-rotate-90 dark:scale-0"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <circle cx="12" cy="12" r="4" />
    <path
      d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"
      stroke-linecap="round"
      stroke-linejoin="round"
    />
  </svg>

  <!-- Moon icon -->
  <svg
    class="moon-icon absolute h-5 w-5 rotate-90 scale-0 transition-all duration-500 dark:rotate-0 dark:scale-100"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" stroke-linecap="round" stroke-linejoin="round" />
  </svg>

  <!-- Glow effect -->
  <span class="glow-bg absolute inset-0 rounded-xl bg-gradient-to-br from-primary/30 to-purple-500/30 opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-md"></span>

  <!-- Ripple effect container -->
  <span class="ripple absolute inset-0 rounded-xl overflow-hidden pointer-events-none"></span>
</button>

<style>
  .theme-toggle {
    position: relative;
    overflow: hidden;
  }

  /* Ripple animation */
  .ripple::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at var(--ripple-x, 50%) var(--ripple-y, 50%), hsla(var(--primary), 0.3), transparent 60%);
    opacity: 0;
    transform: scale(0);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  .theme-toggle:active .ripple::after {
    opacity: 1;
    transform: scale(2);
  }
</style>

<script>
  const themeToggle = document.getElementById('theme-toggle');

  // Theme toggle functionality
  themeToggle?.addEventListener('click', () => {
    document.documentElement.classList.toggle('dark');

    // Add ripple effect
    const ripple = themeToggle.querySelector('.ripple');
    if (ripple) {
      ripple.style.setProperty('--ripple-x', '50%');
      ripple.style.setProperty('--ripple-y', '50%');
    }
  });

  // Track mouse position for ripple effect
  themeToggle?.addEventListener('mousemove', (e) => {
    const rect = themeToggle.getBoundingClientRect();
    const x = ((e.clientX - rect.left) / rect.width) * 100;
    const y = ((e.clientY - rect.top) / rect.height) * 100;

    themeToggle.style.setProperty('--ripple-x', `${x}%`);
    themeToggle.style.setProperty('--ripple-y', `${y}%`);
  });

  // Keyboard accessibility
  themeToggle?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      themeToggle.click();
    }
  });
</script>
